<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.vinicius.myapplication.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horizontal Linear Layout"
        android:id="@+id/buttonHorizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickHorizontal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verical Linear layout"
        android:id="@+id/buttonVertical"
        android:layout_below="@+id/buttonHorizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:onClick="onClickVertical"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grid Layout"
        android:id="@+id/buttonGrid"
        android:layout_below="@+id/buttonVertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:onClick="onClickGrid"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Table Layout"
        android:id="@+id/buttonTable"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/buttonGrid"
        android:layout_centerHorizontal="true"
        android:onClick="onClickTable"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frame Layout"
        android:id="@+id/buttonFrame"
        android:layout_below="@+id/buttonTable"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:onClick="onClickFrame"/>


</RelativeLayout>
